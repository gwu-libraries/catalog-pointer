<?php

/**
 * @file
 * Provide the functions for the Catalog Pointer module
 */

 /**
 * Defines the Catalog Pointer admin settings form 
 */
function catalog_pointer_admin_settings_form() {
  $form['catalog_target'] = array(
    '#type' => 'textfield',
    '#title' => t('Target URL for the Catalog Search'),
    '#default_value' => variable_get('catalog_target', t('http://findit.library.gwu.edu/search')),
  );
  return system_settings_form($form);
}

/* more... */

function catalog_pointer_menu() {
  $items = array();

  $items['admin/config/content/catalog_pointer'] = array(
    'title' => 'Catalog Pointer Configuration',
    'description' => 'Configuration for the Catalog Pointer',
    'page callback' => 'drupal_get_form',
    'page arguments' => array('catalog_pointer_form'),
    'access arguments' => array('access administration pages'),
    'type' => MENU_NORMAL_ITEM,
  );

  return $items;
}
