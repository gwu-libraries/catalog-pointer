<?php

/**
 * @file
 * Provide the functions for the Catalog Pointer module
 */

 /**
 * Defines the Catalog Pointer admin settings form 
 */
function catalog_pointer_admin_settings_form() {
  $form['catalog_target'] = array(
    '#type' => 'textfield',
    '#title' => t('Target URL for the Catalog Search'),
    '#default_value' => variable_get('catalog_target', t('http://findit.library.gwu.edu/search')),
  );
  return system_settings_form($form);
}

/* more... */

function catalog_pointer_menu() {
  $items = array();

  $items['admin/config/content/catalog_pointer'] = array(
    'title' => 'Catalog Search Configuration',
    'description' => 'Configuration for the Catalog Search. Use this the change the target URL for the Catalog Search.',
    'page callback' => 'drupal_get_form',
    'page arguments' => array('catalog_pointer_form'),
    'access arguments' => array('access administration pages'),
    'type' => MENU_NORMAL_ITEM,
  );

  return $items;
}

function catalog_pointer_form($form, &$form_state) {
  $form['catalog_pointer_targets'] = array(
    '#type' => 'textfield',
    '#title' => t('Catalog Pointer'),
    '#default_value' => variable_get('catalog_pointer_targets', 1),
    '#size' => 40,
    '#maxlength' => 80,
    '#description' => t('The number of target vars we have (test field).'),
    '#required' => TRUE,
  );

  return system_settings_form($form);
}
